<!DOCTYPE hibernate-configuration PUBLIC 
	"-//Hibernate/Hibernate Configuration DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<!--<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration 
	DTD//EN" "file:c:\hibernate\hibernate-configuration-3.0.dtd"> -->
<hibernate-configuration>
	<session-factory>


		<property name="hibernate.archive.autodetection">class, hbm</property>
		<!-- propriétés DataSource c3p0 -->
		<property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<!-- propriétés DataSource c3p0 -->
		<property name="hibernate.c3p0.min_size">5</property>
		<property name="hibernate.c3p0.max_size">20</property>
		<property name="hibernate.c3p0.timeout">300</property>
		<property name="hibernate.c3p0.max_statements">50</property>
		<property name="hibernate.c3p0.idle_test_period">3000</property>

		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/Kelmosoft</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernare.use_sql_comments">true</property>
		<!-- mapping files -->
		<mapping class="ma.esoftech.esoftrade.model.Company" />
		<mapping class="ma.esoftech.esoftrade.model.Contact" />
		<mapping class="ma.esoftech.esoftrade.model.MetaObject" />
		<mapping class="ma.esoftech.esoftrade.model.Permission" />
		<mapping class="ma.esoftech.esoftrade.model.Person" />
		<mapping class="ma.esoftech.esoftrade.model.Product" />
		<mapping class="ma.esoftech.esoftrade.model.Role" />
		<mapping class="ma.esoftech.esoftrade.model.User" />
		<mapping class="ma.esoftech.esoftrade.model.ProductCategory" />
		<mapping class="ma.esoftech.esoftrade.model.File" />
		<mapping class="ma.esoftech.esoftrade.model.Mouvement" />
		<mapping class="ma.esoftech.esoftrade.model.Warehouse" />
		<mapping class="ma.esoftech.esoftrade.model.OrderManufacturing" />
		<mapping class="ma.esoftech.esoftrade.model.Nomenclature" />
		   <mapping class="ma.esoftech.esoftrade.model.Gamme" />
		   <mapping class="ma.esoftech.esoftrade.model.Poste" />
	<mapping class="ma.esoftech.esoftrade.model.CategoryPoste" />
		<mapping class="ma.esoftech.esoftrade.model.OrderDocument" /> 
    <mapping class="ma.esoftech.esoftrade.model.BusinessDocument"/>
    <mapping class="ma.esoftech.esoftrade.model.OrderLine"/>
